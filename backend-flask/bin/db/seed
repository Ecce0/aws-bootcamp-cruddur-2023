#! /usr/bin/bash

RED='\033[0;31m'
NO_COLOR='\033[0m'
LABEL="db-seed-path"
printf "${RED}== ${LABEL}${NO_COLOR}\n"

seed_path="$(realpath .)/db/seed.sql"

echo $seed_path

if [ "$1" = "prod" ]; then
  echo "Running in prod mode"
  URL=$PROD_CONNECTION_URL
else
  URL=$CONNECTION_URL
fi

psql $URL cruddur < $seed_path